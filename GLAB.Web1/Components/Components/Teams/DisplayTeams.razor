@inject NavigationManager NavigationManager
@if (confirmDialogShown)
{
  <ConfirmDialog target="targetTeam" response="deleteTeamConfirmation"  dialogMessage="DO YOU WANT TO REMOVE THE TEAM ?" confirmButtonLabel="Delete" cancelButtonLabel="Cancel"></ConfirmDialog>
}




<div class="displayTeamsContainer">
  
   <div class="pos-addteam-searcha">
   
       <div class="addTeam">

     <button  class="D-btn-add-team" @onclick="addteam">Add Team +</button>
    </div>

  <div class="searchBarContainer">
      
    <input placeholder="Team Name/Acronym" class="search-bar" @bind="searchedTeamName" @ref="searchBar" @bind:event="oninput" @onkeyup="searchTeam"/>
    <svg class="searchIcon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M11 6C13.7614 6 16 8.23858 16 11M16.6588 16.6549L21 21M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
  </div>
   
    </div>

  <div class="cardsContainer">
    @foreach (var team in searchedTeams)
    {
      <TeamCard showMoreDetailsEvent="showMoreDetails" deleteTeamEvent="deleteTeam" targetTeam="@team"></TeamCard>
    }
  </div>

</div>
@code{

    [Inject] private NavigationManager navigationManager { get; set; }

    private void addteam()
    {
        navigationManager.NavigateTo("/CreateTeam");
    }
}

